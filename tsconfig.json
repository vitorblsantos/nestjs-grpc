{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/controllers/*": [
        "./src/controllers/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/repositories/*": [
        "./src/repositories/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "target": "ES2022",
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
